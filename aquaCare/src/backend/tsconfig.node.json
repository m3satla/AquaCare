{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "commonjs",  // שינוי מ-ESNext ל-commonjs
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",  // שינוי מ-bundler ל-node
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts", "src/**/*", "wrapTextsWithT.js"]  // הוסף את תיקיית ה-src כדי להכליל את כל הקבצים שלך
}
